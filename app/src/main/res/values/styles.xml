<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NonCapsTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/NonCapsTextAppearance</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">?android:attr/actionBarSize</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <style name="NonCapsTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>